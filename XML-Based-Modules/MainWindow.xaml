<Window x:Class="XML_Based_Modules.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local ="clr-namespace:XML_Based_Modules"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <local:ModularData x:Key="modularData"/>
        <DataTemplate x:Key="mod">
            <StackPanel Background="AliceBlue">
                <TextBlock Text="{Binding Path=Name}" />
                <TextBlock Text="{Binding Path=Id, StringFormat=Id: {0}}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ListView Name="lb" SelectionMode="Single" ItemsSource="{Binding}" ItemTemplate="{StaticResource mod}" VerticalAlignment="Bottom" Height="Auto"/>
    </Grid>
</Window>
